<%- include('partials/header'); -%>
<h1>Compose</h1>
<form class="action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label><input required autocomplete="off" class="form-control" type="text" name="blogTitle">
    </div>
    <div class="form-group">
        <label>Post</label><textarea required autocomplete="off" class="form-control" name="blogBody" id="" cols="30" rows="8"></textarea>
    </div>

        <button class="btn btn-primary" type="submit">Publish</button>


</form>
<div class="loader-wrapper">
    <span class="loader"><span class="loader-inner"></span></span>
</div>
